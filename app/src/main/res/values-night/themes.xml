<resources>

	<style name="MExpense" parent="MExpense.Colors">
		<!-- remove actionbar -->
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<!-- Extends -->
		<item name="appButtonStyle">@style/MExpense.Button</item>
		<item name="textInputStyle">@style/MExpense.TextInputLayout.OutlinedBox</item>
		<item name="appIconButtonStyle">@style/MExpense.Button.IconOnly</item>
		<item name="preferenceTheme">@style/MExpense.Preference</item>
		<item name="materialCalendarTheme">@style/MExpense.DatePicker</item>
		<item name="materialAlertDialogTheme">@style/MExpense.AlertDialog</item>
	</style>

	<!--<editor-fold desc="others">-->
	<style name="MExpense.AppBarOverlay" parent="Widget.Material3.ActionBar.Solid" />

	<style name="MExpense.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />

	<style name="MExpense.Preference" parent="PreferenceThemeOverlay.v14.Material">
		<item name="android:tint">@color/white</item>
	</style>
	<!--</editor-fold>-->
</resources>
