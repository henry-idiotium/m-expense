<resources>
	<!-- Base application theme. -->
	<style name="Theme.MExpense" parent="Theme.MaterialComponents">

		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_200</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_200</item>
		<item name="background">@color/black_800</item>
		<item name="backgroundColor">@color/black_400</item>
		<item name="colorOnBackground">@color/black_400</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

		<!-- Nav item state -->
		<item name="android:drawable">@color/black_800</item>
		<item name="android:state_activated">@color/black_400</item>
		<item name="android:state_pressed">@color/black_400</item>

		<!-- Text -->
		<item name="android:textColorHint">@color/grey_300</item>
		<item name="android:textColor">@color/white</item>


	</style>
</resources>
