<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout_adapter_item_trip"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:clickable="true"
	android:focusable="auto"
	android:orientation="vertical"
	android:padding="10dp"
	tools:ignore="HardcodedText">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/text_adapter_item_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:text="Name"
			android:textSize="15sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/text_adapter_item_destination"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="end"
			android:padding="5dp"
			android:text="destination"
			android:textSize="14sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/text_adapter_item_date_of_trip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:text="date of trip"
			android:textSize="14sp" />

		<TextView
			android:id="@+id/text_adapter_item_risk_assessment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:text="risk assessment"
			android:textAlignment="textEnd"
			android:textSize="14sp"
			android:textStyle="italic" />
	</LinearLayout>
</LinearLayout>
