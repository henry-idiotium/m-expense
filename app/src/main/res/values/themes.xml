<resources>

	<style name="MExpense" parent="MExpense.Colors">
		<!-- remove actionbar -->
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<!-- Extends -->
		<item name="appButtonStyle">@style/MExpense.Button</item>
		<item name="textInputStyle">@style/MExpense.TextInputLayout.OutlinedBox</item>
		<item name="appIconButtonStyle">@style/MExpense.Button.IconOnly</item>
		<item name="materialCalendarTheme">@style/MExpense.DatePicker</item>
		<item name="materialAlertDialogTheme">@style/MExpense.AlertDialog</item>
	</style>

	<!--<editor-fold desc="others">-->
