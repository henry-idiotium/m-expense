<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Base application theme. -->
	<style name="Theme.MExpense" parent="Theme.MaterialComponents.Light.NoActionBar">

		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="background">@color/white</item>
		<item name="backgroundColor">@color/grey_200</item>
		<item name="colorOnBackground">@color/white</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

		<!-- Nav item state -->
		<item name="android:drawable">@color/white</item>
		<item name="android:state_activated">@color/grey_200</item>
		<item name="android:state_pressed">@color/grey_200</item>

		<!-- Text -->
		<item name="android:textColorHint">@color/grey_700</item>
		<item name="android:textColor">@color/black_800</item>

	</style>

	<style name="Theme.MExpense.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.MExpense.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.MExpense.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
